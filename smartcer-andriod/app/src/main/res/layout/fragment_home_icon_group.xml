<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_image">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.smartpro.smartcer.Control.ResizableImageView
                android:id="@+id/smartpro"
                android:src="@drawable/smartpro"
                android:layout_width="@dimen/smartpro_header_width"
                android:layout_height="@dimen/smartpro_header_height"
                android:layout_marginTop="@dimen/fab_margin_0"
                android:layout_marginBottom="@dimen/fab_margin_0"
                android:layout_marginLeft="@dimen/fab_margin_2"
                android:layout_marginRight="@dimen/fab_margin_2"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_section_height"
                android:orientation="horizontal"
                android:background="@drawable/linearlayout_gradient_background_section">
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/enable_bluetooth"
                android:textColor="@color/colorTextColor"
                android:gravity="center"
                android:textSize="@dimen/enable_bluetooth_size"
                android:layout_marginTop="@dimen/fab_margin_3"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/fab_margin_3">
                <com.smartpro.smartcer.Control.ResizableImageView
                    android:id="@+id/home_screen_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_inactive_screen"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_margin="@dimen/fab_margin_0" />
                <com.smartpro.smartcer.Control.ResizableImageView
                    android:id="@+id/home_diamond_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_inactive_reader"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_margin="@dimen/fab_margin_0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.smartpro.smartcer.Control.ResizableImageView
                    android:id="@+id/home_gemstone_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_inactive_gemeye"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_margin="@dimen/fab_margin_0" />
                <com.smartpro.smartcer.Control.ResizableImageView
                    android:id="@+id/home_gauge_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_inactive_gauge"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_margin="@dimen/fab_margin_0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.smartpro.smartcer.Control.ResizableImageView
                    android:id="@+id/home_cer_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_width"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_inactive_cer"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_margin="@dimen/fab_margin_0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin_2"
                android:gravity="center">
                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/colorDarkerGray"
                    android:gravity="center"
                    android:textSize="@dimen/enable_bluetooth_size"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>